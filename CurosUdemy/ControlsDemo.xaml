<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurosUdemy.ControlsDemo"
             Title="ControlsDemo">
    <ScrollView
        Padding="10">
        <VerticalStackLayout
            Spacing="10"
            Padding="10">
            <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Border 
                Stroke="#C49B33"
                StrokeThickness="2"
                Background="#2BOB98"
                Padding="16,8"
                HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20,20,20,20" />
                </Border.StrokeShape>
                <Label  
                    Text="welcome to .NET MAUI!"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    TextColor="Black" />
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>